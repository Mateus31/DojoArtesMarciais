@model List<DojoArtesMarciais.Models.Aluno>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Aluno</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered">
        <thead>
            <tr><th>Aluno</th></tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model)
            {
                <tr><td>@Html.ActionLink(@aluno.Nome, "Details", new { aluno.Id }) </td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não foi dessa vez!!!</p>
}