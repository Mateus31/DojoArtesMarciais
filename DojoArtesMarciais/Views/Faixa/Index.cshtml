@model List<DojoArtesMarciais.Models.Faixa>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Faixa</h2>

@if (Model.Count > 0)
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Faixa</th></tr>
        </thead>
        <tbody>
            @foreach (var faixa in Model)
                {
                <tr><td>@Html.ActionLink(@faixa.Nome, "Details", new { faixa.Id }) </td></tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não foi dessa vez!!!</p>
}